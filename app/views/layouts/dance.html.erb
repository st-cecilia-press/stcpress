<!DOCTYPE html>
<html>
<head>
  <title>St Cecilia Press</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/dance">St. Cecilia Press (Dance)</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'About', "/about" %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Browse Dances <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Dances', "/dances" %></li>
                <li><%= link_to 'Dance Sources', "/dance_sources" %></li>
                <li><%= link_to 'Music Ensembles', "/ensembles" %></li>
                <li><%= link_to 'Categories', "/dance_categories" %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Links <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Pennsic 46 European Music Activities', '/pages/pennsic_euromusic' %></li>
                <li><%= link_to 'Psallite', "http://psallite.thedancingmaster.net" %></li>
                <li><%= link_to 'BlowThyHorn.com', "http://blowthyhorn.com" %></li>
                <li><%= link_to 'De Bel-Accueil Énamouré', "https://belaccueil.wordpress.com/" %></li>
              </ul>
            </li>
            <li><%= link_to 'Music Editions', '/' %></li>
            <li><%= link_to 'Contact', "/contact" %></li>
            <%= render "/layouts/login_dropdown" %>
          </ul>
          <%= render "layouts/search_dance" %>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
      <% if notice || alert %>
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
     <% end %>
<%= yield %>
   </div>
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-3878138-6', 'auto');
  ga('send', 'pageview');

</script>
<%= javascript_pack_tag 'application' %>
</body>
</html>
